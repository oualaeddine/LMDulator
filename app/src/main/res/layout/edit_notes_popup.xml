<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|right">

        <TextView
            android:text="module name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center_vertical|center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:id="@+id/imageButton3"
            android:layout_gravity="top|right"
            android:foregroundGravity="top|right" />
    </TableRow>

    <TextView
        android:text="Note tp:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textVie"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note tp"
            android:id="@+id/note_tp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="24sp"
            android:inputType="numberDecimal"
            style="@style/Widget.AppCompat.EditText"
            android:textColor="@android:color/black"
            android:textColorHint="@color/icons"
            android:textColorHighlight="@color/black_overlay" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/sp1"
        />


    <TextView
        android:text="Note td:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text16"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note td"
            android:id="@+id/note_td"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="24sp"
            android:inputType="numberDecimal"
            android:textColor="@android:color/black"
            android:textColorHint="@color/icons" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/sp2"
        />


    <TextView
        android:text="Note controle:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rtrt"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="control.. /20"
            android:id="@+id/note_control"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="24sp"
            android:inputType="numberDecimal"
            android:textColor="@android:color/black"
            android:textColorHint="@color/icons" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:text="nb: notes /20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <Button
            android:text="confirmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5" />
    </LinearLayout>

</LinearLayout>