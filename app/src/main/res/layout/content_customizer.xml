<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dz.da3sou9a.oualaeddine.lmdulator.activities.Customizer"
    tools:showIn="@layout/activity_customizer">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:baselineAligned="false">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textSpecName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:width="90dp"
                    android:maxLines="1"
                    android:text="Nom de la specialité:"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    tools:ignore="PrivateResource" />

                <EditText
                    android:id="@+id/SpecName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_span="5"
                    android:layout_weight="1"
                    android:width="120dp"
                    android:hint="Science Technique.."
                    android:inputType="text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="140dp"
                    android:maxLines="1"
                    android:text="Année:"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:id="@+id/textAnnee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:width="60dp"
                    android:ems="10"
                    android:hint="L1,L2,L3,M1,M2"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre d'unites par semestre" />

                <EditText
                    android:id="@+id/nbrUnitS1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="S1"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/nbrUnitS2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="S2"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/buttoneditmodule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="7"
                    android:layout_weight="1"
                    android:width="130dp"
                    android:maxLines="1"
                    android:text="entrer les modules" />

            </TableRow>

            <TableRow
                android:id="@+id/listModules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <include
                    layout="@layout/modules_list_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>

            <Button
                android:id="@+id/btnS"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save" />

        </TableLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
