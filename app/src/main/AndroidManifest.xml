<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dz.da3sou9a.oualaeddine.lmdulator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Loader"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NotesTable"
            android:label="@string/title_activity_notes_table"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Customizer"
            android:label="@string/title_activity_customizer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.FirstTimeSetup"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_first_time_setup"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".activities.MainActivity"></activity>
    </application>

</manifest>