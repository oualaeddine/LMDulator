<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dz.da3sou9a.oualaeddine.lmdulator">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Loader"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".activities.NotesTable"
            android:label="@string/title_activity_notes_table"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Customizer"
            android:label="@string/title_activity_customizer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.FirstTimeSetup"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_first_time_setup"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Launcher"
            android:label="@string/title_activity_launcher"
            android:theme="@style/AppTheme"></activity>

    </application>

</manifest>